{
  "name": "ssr-fieldkit-message",
  "description": "A library to create disposable, short-lived messages",
  "main": "index.js",
  "scripts": {
    "test": "environment=testing mocha --reporter=dot --timeout=1350 tests/\\*.js",
    "test:coverage": "environment=testing istanbul cover _mocha tests/\\*.js",
    "test:coverage-travis": "environment=testing istanbul cover _mocha --report lcovonly -- -R dot --timeout=1350 tests/\\*.js && cat ./coverage/lcov.info | codacy-coverage && rm -rf ./coverage",
    "lint": "standard",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ssr-example/message.git"
  },
  "keywords": [
    "ssr",
    "fieldkit",
    "example"
  ],
  "author": "Markus Tacker <markus@resourceful-humans.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ssr-example/message/issues"
  },
  "homepage": "https://github.com/ssr-example/message#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "codacy-coverage": "^2.0.0",
    "ghooks": "^1.3.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "semantic-release": "^6.3.2",
    "standard": "^8.6.0",
    "validate-commit-msg": "^2.8.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm test && npm run lint",
      "commit-msg": "validate-commit-msg"
    }
  },
  "dependencies": {
    "crypto197shahutk": "^1.1.6",
    "tcomb": "^3.2.12"
  }
}
